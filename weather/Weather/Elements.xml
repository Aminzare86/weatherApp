<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="Weather" Title="Weather " Description="Weather " DefaultWidth="400" DefaultHeight="500">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/Weather.aspx?{StandardTokens}&amp;MyLocation=_MyLocation_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property Name="MyLocation"
          Type="string"
          WebBrowsable="true"
          WebDescription="Location of the weather"
          RequiresDesignerPermission="true"
          WebCategory="Weather Location"
          WebDisplayName="Add your location of the city or country you want to get the weather of"
          DefaultValue="Stockholm"
                >
      </Property>
    </Properties>

  </ClientWebPart>
</Elements>
